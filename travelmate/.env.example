# API Configuration
VITE_API_BASE_URL=http://localhost
VITE_AUTH_SERVICE_URL=http://localhost/api/auth
VITE_TRIP_SERVICE_URL=http://localhost/api/trip
VITE_USER_SERVICE_URL=http://localhost/api/users
VITE_JOURNAL_SERVICE_URL=http://localhost/api/journal

# External APIs
VITE_WEATHER_API_KEY=your_weather_api_key_here
VITE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
VITE_APP_NAME=TravelMate
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your Ultimate Travel Companion

# Storage Configuration
VITE_STORAGE_PREFIX=travelmate_
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_USER_STORAGE_KEY=user_data
VITE_REFRESH_TOKEN_KEY=refresh_token

# Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
VITE_MAX_IMAGES_PER_UPLOAD=5

# Debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
