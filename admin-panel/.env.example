# ===========================
# TRAVEL MATE ADMIN PANEL - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values
# ===========================

# ===========================
# APPLICATION CONFIGURATION
# ===========================
VITE_APP_NAME=Travel Mate Admin
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_NODE_ENV=development

# ===========================
# API CONFIGURATION
# ===========================
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# ===========================
# AUTHENTICATION & SECURITY
# ===========================
VITE_JWT_SECRET_KEY=your_jwt_secret_key_here
VITE_JWT_EXPIRY=24h
VITE_REFRESH_TOKEN_EXPIRY=7d
VITE_AUTH_COOKIE_NAME=travel_mate_auth
VITE_TOKEN_REFRESH_THRESHOLD=300
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=false

# ===========================
# CLOUDINARY CONFIGURATION
# ===========================
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key
VITE_CLOUDINARY_API_SECRET=your_cloudinary_api_secret
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ===========================
# DATABASE CONFIGURATION (Reference)
# ===========================
VITE_DATABASE_URL=postgresql://username:password@localhost:5432/travel_mate_db
VITE_REDIS_URL=redis://localhost:6379

# ===========================
# EMAIL CONFIGURATION
# ===========================
VITE_EMAIL_SERVICE=sendgrid
VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_EMAIL_FROM=noreply@your-domain.com

# ===========================
# SOCIAL MEDIA APIS
# ===========================
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_API_KEY=your_twitter_api_key
VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# ===========================
# PAYMENT GATEWAY
# ===========================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# ===========================
# MAPS AND LOCATION SERVICES
# ===========================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# ===========================
# ANALYTICS AND MONITORING
# ===========================
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token
VITE_SENTRY_DSN=your_sentry_dsn

# ===========================
# FEATURE FLAGS
# ===========================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=true
VITE_DEBUG_MODE=true
VITE_ENABLE_MAINTENANCE_MODE=false
VITE_ENABLE_REMOTE_LOGGING=false
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_MOCK_DATA=true

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf
VITE_MAX_FILES_PER_UPLOAD=5

# ===========================
# PAGINATION SETTINGS
# ===========================
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# ===========================
# CACHE CONFIGURATION
# ===========================
VITE_CACHE_TTL=300

# ===========================
# LOGGING CONFIGURATION
# ===========================
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true

# ===========================
# SECURITY
# ===========================
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# ===========================
# THIRD-PARTY SERVICES
# ===========================

# SMS Service (Twilio)
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Weather API
VITE_OPENWEATHER_API_KEY=your_openweather_api_key

# Currency Exchange API
VITE_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# ===========================
# CDN AND STORAGE
# ===========================
VITE_CDN_BASE_URL=https://cdn.your-domain.com
VITE_ASSETS_BASE_URL=https://assets.your-domain.com

# ===========================
# ERROR TRACKING
# ===========================
VITE_BUGSNAG_API_KEY=your_bugsnag_api_key

# ===========================
# CHAT AND COMMUNICATION
# ===========================
VITE_SOCKET_IO_URL=http://localhost:3001
VITE_CHAT_SERVICE_API_KEY=your_chat_service_api_key

# ===========================
# BOOKING AND TRAVEL APIS
# ===========================
VITE_BOOKING_COM_API_KEY=your_booking_com_api_key
VITE_AMADEUS_API_KEY=your_amadeus_api_key
VITE_AMADEUS_API_SECRET=your_amadeus_api_secret
VITE_SKYSCANNER_API_KEY=your_skyscanner_api_key

# ===========================
# DEVELOPMENT/TESTING
# ===========================
VITE_MOCK_API_DELAY=1000
VITE_ENABLE_API_MOCKING=true
VITE_CYPRESS_BASE_URL=http://localhost:3000

# ===========================
# PRODUCTION OVERRIDES
# ===========================
# Uncomment and modify these for production deployment
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_APP_ENVIRONMENT=production
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_CONSOLE_LOGS=false
# VITE_ENABLE_HTTPS_ONLY=true

# ===========================
# SETUP INSTRUCTIONS
# ===========================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual API keys and secrets
# 3. Never commit .env to version control
# 4. Keep this .env.example file updated when adding new variables
# 5. Use strong, unique secrets for production
# 6. Regularly rotate API keys and secrets
# 7. Monitor usage of third-party APIs to avoid unexpected charges

# ===========================
# REQUIRED VARIABLES FOR BASIC FUNCTIONALITY
# ===========================
# - VITE_API_BASE_URL
# - VITE_JWT_SECRET_KEY
# - VITE_CLOUDINARY_CLOUD_NAME (for image uploads)
# - VITE_CLOUDINARY_API_KEY (for image uploads)
# - VITE_CLOUDINARY_API_SECRET (for image uploads)

# ===========================
# OPTIONAL VARIABLES
# ===========================
# All other variables are optional and provide additional functionality
# The application will work with default values if these are not set
